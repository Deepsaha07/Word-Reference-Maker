<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="TaskPaneApp">

  <Id>2366514C-4D30-4385-889D-41E2FB35DDEA</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>WordRef</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="WordRef - BibTeX paste &amp; cite"/>
  <Description DefaultValue="Paste BibTeX, add notes, insert citations, and auto-build a bibliography."/>

  <!-- ICONS -->
  <IconUrl DefaultValue="https://deepsaha07.github.io/Word-Reference-Maker/assets/icon-32-v2.png"/>
  <HighResolutionIconUrl DefaultValue="https://deepsaha07.github.io/Word-Reference-Maker/assets/icon-64-v2.png"/>

  <!-- SUPPORT PAGE -->
  <SupportUrl DefaultValue="https://github.com/Deepsaha07/Word-Reference-Maker/blob/main/docs/support.html"/>

  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="WordApi" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://github.com/Deepsaha07/Word-Reference-Maker/blob/d28ce8dbf80d6ac8e0d5a5f2a7dd35e7ebf7ee39/docs/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides
      xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
      xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="grpWordRef">

                <Label resid="residGroupLabel"/>

                <Icon>
                  <bt:Image size="16" resid="icon16"/>
                  <bt:Image size="32" resid="icon32"/>
                  <bt:Image size="80" resid="icon80"/>
                </Icon>

                <!-- MAIN BUTTON -->
                <Control xsi:type="Button" id="btnShowPane">
                  <Label resid="residButtonLabel"/>
                  <Supertip>
                    <Title resid="residButtonLabel"/>
                    <Description resid="residButtonTip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="residTaskPaneUrl"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>

      <!-- ICONS -->
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://deepsaha07.github.io/Word-Reference-Maker/assets/icon-16-v2.png"/>
        <bt:Image id="icon32" DefaultValue="https://deepsaha07.github.io/Word-Reference-Maker/assets/icon-32-v2.png"/>
        <bt:Image id="icon80" DefaultValue="https://deepsaha07.github.io/Word-Reference-Maker/assets/icon-80-v2.png"/>
        <bt:Image id="icon128" DefaultValue="https://deepsaha07.github.io/Word-Reference-Maker/assets/icon-128-v2.png"/>
      </bt:Images>

      <!-- TASKPANE URL -->
      <bt:Urls>
        <bt:Url id="residTaskPaneUrl" DefaultValue="https://github.com/Deepsaha07/Word-Reference-Maker/blob/d28ce8dbf80d6ac8e0d5a5f2a7dd35e7ebf7ee39/docs/taskpane.html"/>
      </bt:Urls>

      <!-- TEXT LABELS -->
      <bt:ShortStrings>
        <bt:String id="residGroupLabel" DefaultValue="WordRef"/>
        <bt:String id="residButtonLabel" DefaultValue="Open WordRef"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="residButtonTip" DefaultValue="Open the WordRef task pane."/>
      </bt:LongStrings>

    </Resources>
  </VersionOverrides>
</OfficeApp>
